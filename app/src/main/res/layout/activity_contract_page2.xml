<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContractPageActivity">

    <TextView
        android:id="@+id/textRoomContract"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="Phòng 1"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/imageRoomContract"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textRoomContract"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/banner1">

    </ImageView>

    <ImageView
        android:id="@+id/imageCustomerContract"
        android:layout_width="203dp"
        android:layout_height="142dp"
        android:layout_below="@+id/imageRoomContract"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="79dp"
        android:scaleType="fitXY"
        android:src="@drawable/banner1">

    </ImageView>

    <TextView
        android:id="@+id/textCustomerContract"
        android:layout_width="288dp"
        android:layout_height="35dp"
        android:layout_below="@+id/imageRoomContract"
        android:layout_marginLeft="-121dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/imageCustomerContract"
        android:text="Ngô Thanh Huyền"
        android:textColor="#000"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/textAddressCustomerContract"
        android:layout_width="156dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textCustomerContract"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="62dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/imageCustomerContract"
        android:text="Quảng Bình"
        android:textColor="#000"
        android:textSize="22dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/labelFrom"
        android:layout_width="227dp"
        android:layout_height="53dp"
        android:layout_below="@+id/imageCustomerContract"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="FROM"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/labelTo"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageCustomerContract"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/labelFrom"
        android:gravity="center"
        android:text="TO"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/textFrom"
        android:layout_width="229dp"
        android:layout_height="51dp"
        android:layout_below="@+id/labelFrom"
        android:gravity="center"
        android:text="16/08/2001"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/textTo"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_below="@+id/labelFrom"
        android:layout_toRightOf="@+id/labelFrom"
        android:gravity="center"
        android:text="16/08/2101"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <Button
        android:id="@+id/buttonThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_bg"
        android:padding="20dp"
        android:text="Thanh Lý Hợp Đồng"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold">

    </Button>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageRoomContract"
        android:layout_marginTop="32dp"
        android:text="Name :"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCustomerContract"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/imageCustomerContract"
        android:text="Address :"
        android:textColor="@android:color/darker_gray"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>
