<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bill_False">

    <TextView
        android:id="@+id/labelTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="This is an unpaid payment"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/labelInvoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelTitle"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Invoice"
        android:textColor="#E80C6C"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/labelRoomBillDetail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelInvoice"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:text="Room : "
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/labelDatetimeBillDetail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelRoomBillDetail"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="Date : "
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/textRoomNameBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelInvoice"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/labelRoomBillDetail"
        android:gravity="center"
        android:text="PhÃ²ng 1"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/textDatetimeBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textRoomNameBill"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/labelDatetimeBillDetail"
        android:gravity="center"
        android:text="16/08/2001"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/labelSumMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDatetimeBill"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Total Money"
        android:textColor="#E80C6C"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/textTotalMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelSumMoney"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="3000000"
        android:textColor="#E80C6C"
        android:textSize="35dp"
        android:textStyle="bold">

    </TextView>

    <Button
        android:id="@+id/buttonPayBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTotalMoney"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_bg"
        android:gravity="center"
        android:text="Pay"
        android:textColor="@color/white"
        android:textSize="35dp">

    </Button>

    <TextView
        android:id="@+id/labelFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPayBill"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Please pay on time"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/labelThanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelFooter"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Thank You"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>
</RelativeLayout>