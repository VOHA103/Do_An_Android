<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:background="@drawable/round_border"
        >

        <TextView

            android:id="@+id/labelTenDichVu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Dịch vụ : "
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/textItemNameTypeService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/labelTenDichVu"
            android:text="Dịch Vụ Vệ Sinh"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/labelGiaDichVu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelTenDichVu"
            android:layout_marginRight="20dp"
            android:text="Giá : "
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/textItemPriceTypeService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textItemNameTypeService"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/labelGiaDichVu"
            android:text="3000000"
            android:textColor="#C8275A"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

</RelativeLayout>