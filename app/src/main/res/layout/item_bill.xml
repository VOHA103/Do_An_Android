<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:background="@drawable/round_border">

        <TextView
            android:id="@+id/textNameRoomBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Phòng 1"
            android:textSize="40sp"></TextView>

        <TextView
            android:id="@+id/labelMoneyBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/textNameRoomBill"
            android:text="Tổng Tiền"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/textMoneyBill"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelMoneyBill"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/textNameRoomBill"
            android:text="100000000"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp">

        </TextView>
    </RelativeLayout>

</RelativeLayout>